{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block body %}


<div class="example-wrapper">
// iteration

    <ul>
        {% for article in articles %}
        <li> <a href="{{ path('show_article', {id : article.id }) }}">{{article.title|upper}}</a></li>
        {% else %}
            <p>aucun article disponible</p>
        {% endfor %}
    </ul>

{% if articles|length > 0 %}
    <p> {{ articles|length}}  </p>
    {% else %}
    <p> Pas d'articles dans la liste</p>

    {% endif %}


</div>

{% endblock %}